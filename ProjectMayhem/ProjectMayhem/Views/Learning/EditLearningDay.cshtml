@using ProjectMayhem.DbEntities

@model LearningDay

@{
    ViewBag.Title = "Edit Learning Day";
}

<h2>Edit learning day</h2>

@using (Html.BeginForm("EditLearningDay", "Learning", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
        </div>
    </div>

    <h3>Topics List</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Parent topic</th>
            </tr>
        </thead>
        <tbody id="childtable">
            @Html.EditorFor(model => Model.Topics)
        </tbody>
    </table>

    <p>
        <input name="command" type="submit" value="Add Topic" />
        <input name="command" type="submit" value="Remove Selected Topics" />
        <input name="command" type="submit" value="Cancel/Refresh" />
    </p>
    <h3>References:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody id="childtable">
            @Html.EditorFor(model => Model.References)
            <tr><td>Empty</td><td>Empty</td></tr>
        </tbody>
    </table>
    <p>
        <input name="command" type="submit" value="Add Reference" />
        <input name="command" type="submit" value="Remove Selected References" />
        <input name="command" type="submit" value="Cancel/Refresh" />
    </p>
    <!-- Required to pass learning day ID to the controler method. -->

    @Html.HiddenFor(m => m.LearningDayId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary float-right" value="Save" />
        </div>
    </div>
    <div>
        @if (!string.IsNullOrEmpty(Request.QueryString["retUrl"]))
        {
            <a href=@Request.QueryString["retUrl"]>Back</a><br>
            @Html.ActionLink("My Schedule", "Schedule", "Learning")
        }
    </div>

}
