@model ProjectMayhem.DbEntities.TopicDay

@{
    ViewBag.Title = "Topic";
}

@Html.HiddenFor(model => model.TopicId)
@Html.HiddenFor(model => model.UserId)
@Html.HiddenFor(model => model.LearningDayId)
@Html.HiddenFor(model => model.NewlyCreated)
<!-- Saving TopicDay topic fields:-->
@Html.HiddenFor(model => model.Topic.Title)
@Html.HiddenFor(model => model.Topic.TopicsId)
@Html.HiddenFor(model => model.Topic.Description)
@Html.HiddenFor(model => model.Topic.ParentTopicId)

@if (!Model.Remove)
{
    <tr>
        @Html.EditorFor(model => model.Topic)
        <td>
            @Html.EditorFor(model => model.Remove)
        </td>
    </tr>
}
else
{
    @Html.HiddenFor(model => model.Remove)
}
