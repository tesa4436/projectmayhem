@model ProjectMayhem.DbEntities.LearningDay

@{
    ViewBag.Title = "LearningDay";
}

<!--Hidden fields:-->
@Html.EditorFor(model => model.Topics)
@Html.EditorFor(model => model.References)
@Html.HiddenFor(model => model.Date)
@Html.HiddenFor(model => model.LearningDayId)
@Html.HiddenFor(model => model.RowVersion)
@Html.HiddenFor(model => model.UserId)

@if (Model.Date.Date > DateTime.Today)
{
    <tr>
        <td>
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </td>
        <td>@Model.Date.Date</td>
        <td>
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </td>
        <td>@Model.Topics.Count</td>
        <td>@Model.References.Count</td>
        <td>
            @Html.EditorFor(model => model.Remove)
        </td>
        @Html.EditorFor(model => model.Topics)
        @Html.EditorFor(model => model.References)
    </tr>
}
else
{
    @Html.HiddenFor(model => model.Title)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Remove)
    <tr>
        <td>@Model.Title</td>
        <td>@Model.Date.Date</td>
        <td>@Model.Description</td>
        <td>@Model.Topics.Count</td>
        <td>@Model.References.Count</td>
        <td></td>
    </tr>
}
