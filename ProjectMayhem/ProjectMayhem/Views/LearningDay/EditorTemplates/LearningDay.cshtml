@model ProjectMayhem.DbEntities.LearningDay

@{
    ViewBag.Title = "LearningDay";
}

    <tr>
        <td>
            @Html.HiddenFor(model => model.LearningDayId)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </td>
        <td>
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </td>
        <td>@Model.Topics.Count</td>
        <td>@Model.References.Count</td>
        <td>
            @Html.EditorFor(model => model.Remove)
        </td>
        @Html.EditorFor(model => model.Topics)
        @Html.EditorFor(model => model.References)
    </tr>